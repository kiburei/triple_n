<h1>Revenusure Transactions</h1>
<h5>Transactions: <%= number_to_currency(@revenusure_bills.sum(:bill_amount), :unit => "KES ") %></h5>

<table class="striped">
  <thead>
    <th>Revenue Stream Code</th>
    <th>Bill Number</th>
    <th>Receipt Number</th>
    <th>Transaction Type</th>
    <th>Bill Amount</th>
    <th>Transaction Code</th>
    <th>Identifier</th>
    <th>Client Name</th>
  </thead>
  <tbody>
    <% @revenusure_bills.each do |bill| %>
      <tr>
        <td><%= bill.revenue_stream_code %></td>
        <td><%= bill.bill_number  %></td>
        <td><%= bill.receipt_number  %></td>
        <td><%= bill.transaction_type  %></td>
        <td><%= bill.bill_amount  %></td>
        <td><%= bill.transaction_code  %></td>
        <td><%= bill.identifier  %></td>
        <td><%= bill.client_name  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
